                            <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
    <h2 style="text-align: center; padding: 1%; margin: 2% auto; background-color: #0077b6; color: white; font-weight: bold; width: 88%;">Past Appointments</h2>

    <% for(let i=0;i<ap.length;i++){ %>
        <div class="form">
          <div class="container">
            <form class="f" action="#" method="POST">
        
              <label for="fname">Patient's Name</label>
              <input type="text" id="fname" name="patient" value="<%=ap[i].patientName%>" readonly>
        
              <label for="lname">Department</label>
              <input type="text" id="lname" name="dept" value="<%= ap[i].department%>" readonly>
              
              <label for="birthday">Desired Date:</label>
              <input type="text" id="name" name="date" value="<%= ap[i].choiceDate%>" readonly> <br>
              
              <label for="from">From:</label>
              <input type="datetime-local" id="name" name="ltime" value="<%= ap[i].timeL%>" readonly>
              
              <label for="to">To:</label>
              <input type="datetime-local" id="name" name="rtime" value="<%= ap[i].timeR %>" readonly> <br>
        
              <label for="note">Note:</label>
              <input type="text" id="fname" name="note" value="<%= ap[i].note %>" readonly>
        
              <br>
    
            </form>
          </div>
        </div>
        <% } %>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

