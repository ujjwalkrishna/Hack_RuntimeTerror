    <h1>
        <%= hospital[0].name %>
    </h1>

    <div class="heading">
        <p style="text-align: center;">Now reserve your consultation in one minute with group of best doctors in all
            specializations.</p>
    </div>

    <div class="para">
        <p>Click on any of the following departments for which you need consultation.</p>
    </div>

    <div class="row">
        <% (hospital[0].departments).forEach((department)=>{ %>
            <div class="card" style="width: 12rem;">

                <% if(department.img[0]){ %>
                    <img class="card-img-top" src="http://localhost:3000/<%= department.img[0].data %>" width="150px"
                        height="150px" alt="Card image cap">
                    <% }else{ %>
                        <p>This is image area.</p>
                        <% } %>
                            <div class="card-body">

                                <form id="form100" action="/department" method="post">
                                    <input type="hidden" value="<%= JSON.stringify(department) %>" name="department">
                                    <a href="#">
                                        <p class="card-text" style="text-align: center;">
                                            <%= department.name %>
                                        </p>
                                    </a>
                                    <button class="ml-6 btn btn-success" type="submit">Click</button>
                                </form>

                            </div>

            </div>
            <% }) %>

    </div>

    <div class="card text-center"
        style="width: 70%; margin-left: 15%; height:280px; box-shadow: 0 12px 16px 0 rgba(0,0,0,0.25), 0 17px 50px 0 rgba(0,0,0,0.19);">
        <div class="card-header" style="height:50px; font-size: 20px;">
            About our Hospital
        </div>
        <div class="card-body-" style="height:300px;">
            <h5 class="card-title" style="padding:10px;">
                <%= hospital[0].name %>
            </h5>
            <p class="card-text-">
                <%= hospital[0].about %>
            </p>
            <a href="#" class="btn btn-primary"><%= hospital[0].name %></a>
        </div>
        <div class="card-footer text-muted">
            Contact: <%= hospital[0].phone %>
        </div>
    </div>
